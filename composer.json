{
    "name": "simpleid/simpleid",
    "description": "A simple, personal OpenID provider written in PHP",
    "type": "project",
    "require": {
        "php": "^5.4 | ^7.0",
        "ext-bcmath": "*",
        "ext-pcre": "*",
        "ext-session": "*",
        "ext-xml": "*",
        "ext-xmlreader": "*",
        "ext-mcrypt": "*",
        "ext-openssl": "*",
        "ext-hash": "*",
        "kelvinmo/simplexrd": "^3.0",
        "kelvinmo/simplejwt": "^0.4",
        "kelvinmo/simplei18n": "^0.2",
        "kelvinmo/fernet-php": "^1.0 | ^0.5",
        "bcosca/fatfree-core": "^3.7",
        "mustangostang/spyc": "^0.6",
        "composer/semver": "^3.0",
        "psr/log": "^1.0",
        "wikimedia/composer-merge-plugin": "^1.4"
    },
    "suggest": {
        "ext-gmp": "Better performance",
        "simpleid/simpleid-tool": "Utilities for SimpleID"
    },
    "require-dev": {
        "phpunit/phpunit": "4.*",
        "phing/phing": "2.*",
        "apigen/apigen": "4.*"
    },
    "license": "GPL-2.0+",
    "authors": [
        {
            "name": "Kelvin Mo",
            "email": "kmo@users.sourceforge.net"
        }
    ],
    "config": {
        "vendor-dir": "www/vendor"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "2.0-dev"
        },
        "merge-plugin": {
            "include": [
                "composer.site.json"
            ]
        }
    }
}
